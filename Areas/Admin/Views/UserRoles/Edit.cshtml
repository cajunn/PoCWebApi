@model PoCWebApi.Areas.Admin.ViewModels.UserRolesViewModel

@{
    ViewData["Title"] = "Edit User Roles";
}

<h1>Roles for @Model.DisplayName (@Model.Email)</h1>

<form asp-area="Admin" asp-controller="UserRoles" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Oid" />

    <table class="table">
        <thead>
            <tr>
                <th>Assigned</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="Roles[@i].IsAssigned" />
                        <input asp-for="Roles[@i].RoleId" type="hidden" />
                        <input asp-for="Roles[@i].Name" type="hidden" />
                    </td>
                    <td>@Model.Roles[i].Name</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-area="Admin" asp-controller="UserRoles" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
